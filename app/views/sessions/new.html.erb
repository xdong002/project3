<h1>Login</h1>

<%= form_for @user, url: "/sessions", method: "post" do |f| %>
  <div>
    <%= f.text_field :username, placeholder: "Username" %>
  </div>
  <div>
    <%= f.password_field :password, placeholder: "Password", style: "margin-top:2%" %>
  </div>
  <%= f.submit "Log In", style: "margin-top:2%" %>
<% end %>
