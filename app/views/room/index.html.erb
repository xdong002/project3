<div class="container">
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
  </ol>

  <div class="welcomeImage" style="width:80%; margin: 0 auto; margin-top: 2%;">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">

        <div class="item active">
          <img src='<%=image_path("welcome.jpg")%>' style="width:100%; height: 40vh;">
          <div class="carousel-caption">
          </div>
        </div>

        <div class="item">
          <img src='<%=image_path("welcome2.jpg")%>' style="width:100%; height: 40vh;">
          <div class="carousel-caption">
          </div>
        </div>

        <div class="item">
          <img src='<%=image_path("welcome3.jpg")%>' style="width:100%; height: 40vh;">
          <div class="carousel-caption">
          </div>
        </div>

      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

<div class="searchBar">
  <div id="sessionSearch" style="margin:3%;">
    <%= form_with url: search_path, id:"sessionSearch" do |form| %>
        <div class="input-group">
          <%= form.text_field(:search, class: 'search-query form-control') %>
        <div class="input-group-btn">
          <button class="btn btn-danger" type:'submit'><span class="glyphicon glyphicon-search"></span></button>
        </div>
      </div>
    <% end %>
    </div>
</div>

  <% @rooms.each do |room| %>
  <div class="sessionsRenderBox">
    <div class="panel panel-warning">
      <%= link_to room_path(room.id) do %>
        <div class="panel-heading">:::<%= room.name %>:::</div>
      <% end %>
      <%room.topics.sort.reverse.take(6).each do |t|%>
        <%= link_to topic_path(t.id) do %>
          <div class="panel-footer">
            <%= t.title %>
            <p class="float-right" style="margin-right:2%;" title="Comments"><%= t.comments.length %></p>
            <p class="float-right glyphicon glyphicon-comment" style="margin-right:5px;" title="Comments"></p>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>
  <% end %>

</div>
