html body{
  height: 100%;
  width: 100%;
  text-align: center;
  background-image: url('<%= asset_path("background.jpg") %>');
  background-size: cover;
}

header {
  background-color: BurlyWood;
  height: 8vh;
  margin-bottom: 1%;
  text-align: left;
}

/*.banner {
  width: 100%;
  height: 200px;
}*/

.mainHeader {
  display: inline-block;
  font-size: 4vh;
  margin-top: 2vh;
}

.fix {
  clear: both;
}

.headerLogo {
  height: 100%;
  width: 20%;
  float: left;
}

.userSession {
  height: 100%;
}

.container {
  display: inline-block;
  min-height: 100vh;
  height: cover;
  width: 70%;
  border-left: 1px solid white;
  border-right: 1px solid white;
  padding: 0;
}

.searchBar {
  width: 100%;
  height: 15%;
}

#custom-search-input {
  width: 50%;
  display: inline-block;
  margin-top: 3%;
}

#custom-search-input button {
    border-radius: 3px;
    color:white;
}

.sessionsRenderBox {
  width: 49%;
  margin: 0;
  display: inline-block;
  vertical-align: top;
  border-radius: 1.5%;
}

.sessionHeaderBox {
  height: 25vh;
  width: 100%;
  /*background-color: green;*/
  background-color: rgba(0,0,0,.7);
}

.sessionHeader {
  display: inline-block;
  height: 80%;
  width: 80%;
  vertical-align: middle;
  /*background-color: yellow;*/
}

.helper {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.sessionLogo {
  display: inline-block;
  height: 100%;
  border-radius: 50%;
  float: left;
  width: cover;
}

.sessionSearchBar {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  width: 50%;
  padding-top: 2%;
}

.sessionName {
  font-size: 5vh;
}

#sessionSearch {
  width: 100%;
}

.topicsContainer {
  min-height: 70vh;
  height: cover;
}

.topicBox {
  height: 13vh;
  background-color: rgba(255, 255, 255, 0.7);
  border: 2px groove white;
  margin: 0;
  text-align: left;
  padding: 2px 10px;
}

.topicTitle {
  font-size: 3.5vh;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 30%;
  display: inline-block;
  vertical-align: top;
}

.topicContent {
  font-size: 2.5vh;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 50%;
  display: inline-block;
  margin-left: 1%;
  margin-top: 1%;
  vertical-align: top;
}

.logBtn {
  display: inline-block;
  height: 100%;
  float: right;
  background-color: rgba(255, 255, 255, 0);
  border: 0;
}

.float-right {
  float: right;
}

.noStyle {
  text-decoration: none;
}

.floor {
  height: 15vh;
  border: 1px solid white;
  line-height: 150%;
}

.authorBox {
  background-color: lightBlue;
  width: 22%;
  border-right: 1px solid white;
  box-shadow: inset 0 0 30px #FFFFFF;
}

.contentBox {
  background-color: Cornsilk;
  vertical-align: top;
  white-space: pre-line;
}

.contentBox h1 {
  font-weight: bold;
  font-size: 3vh;
}

.contentBox p {
  text-align: left;
  padding: 2%;
  font-size: 2.5vh;
}

.gameHeadIcon {
  max-height: 100px;
}

.toolBTN {
  display: inline-block;
}

footer {
  color: white;
  width: 100%;
  height: cover;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 1%;
}

.panel-footer{
  text-align: justify;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
