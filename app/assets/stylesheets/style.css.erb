html body{
  height: 100%;
  width: 100%;
  text-align: center;
  background-image: url('<%= asset_path("background.jpg") %>');
  background-size: cover;
}

header {
  background-color: BurlyWood;
  height: 8vh;
  margin-bottom: 1%;
  text-align: left;
}

.banner {
  width: 60%;
  height: 25vh;
  border: 2px solid white;
}

.mainHeader {
  display: inline-block;
  font-size: 4vh;
  margin-top: 2vh;
}

.mainLogo {
  margin-top: 1.5vh;
  max-height: 100%;
  margin-left: 1vw;
}

.welcomeImage {
  background: linear-gradient(rgba(0,0,0,.7), rgba(255,255,255,.7));
  position: relative;
  color: white;
  padding: 3%;
}

.welcomeImage h1 {
  font-size: 5vh;
}

.welcomeImage h4 {
  font-size: 2.5vh;
  margin-top: 2%;
}

.searchBar {
  width: 50%;
  height: 15%;
  padding: 2%;
  display: inline-block;
  margin-top: 2%;
}

.indexBottom {
  min-height: 60vh;
  background-color: rgba(255, 255, 255, 0.7);
}

.fix {
  clear: both;
}

.headerLogo {
  height: 5vh;
  max-width: 20vw;
  float: left;
}

.userSession {
  height: 100%;
}

.container {
  display: inline-block;
  min-height: 100vh;
  height: cover;
  width: 70%;
  border-left: 1px solid white;
  border-right: 1px solid white;
  padding: 0;
}


#custom-search-input {
  width: 50%;
  display: inline-block;
}

#custom-search-input button {
    border-radius: 3px;
    color:white;
}

.sessionsRenderBox {
  width: 49%;
  margin: 0;
  display: inline-block;
  vertical-align: top;
  border-radius: 1.5%;
}

.sessionHeaderBox {
  height: 25vh;
  width: 100%;
  background-color: rgba(0,0,0,.7);
  color: white;
}

.sessionHeader {
  display: inline-block;
  max-height: 80%;
  max-width: 80%;
  vertical-align: middle;
}

.helper {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.sessionLogo {
  display: inline-block;
  max-height: 20vh;
  border-radius: 50%;
  float: left;
}

.sessionSearchBar {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  width: 50%;
  padding-top: 2%;
}

.sessionName {
  font-size: 5vh;
}

#sessionSearch {
  width: 100%;
}

.topicsContainer {
  min-height: 70vh;
  height: cover;
}

.topicBox {
  height: 13vh;
  background-color: rgba(255, 255, 255, 0.7);
  border: 2px groove white;
  margin: 0;
  text-align: left;
  padding: 2px 10px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.topicBox p {
  display: inline-block;
  font-size: 2.5vh;
}

.messageBox {
  height: 10vh;
  background-color: rgba(250, 215, 100, 0.7);
  border: 2px groove white;
  margin: 0;
  text-align: left;
  padding: 2px 10px;
  position: relative;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.messageBox p {
  display: inline-block;
  font-size: 2.5vh;
}

.lower-right {
  position: absolute;
  bottom: 0;
  right: 10px;
}

.topicsContainer :hover {
  background-color: WhiteSmoke;
}

.topicTitle {
  font-size: 3.5vh;
  height: 3.8vh;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 15vw;
  display: inline-block;
  vertical-align: top;
}

.profileTopicTitle {
  font-size: 3.5vh;
  height: 5vh;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 15vw;
  display: inline-block;
  vertical-align: top;
}

.topicContent {
  font-size: 2.5vh;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 30%;
  display: inline-block;
  margin-left: 1%;
  margin-top: 1%;
  vertical-align: top;
}

.logBtn {
  display: inline-block;
  height: 100%;
  float: right;
  background-color: rgba(255, 255, 255, 0);
  border: 0;
}

.float-right {
  float: right;
}

.noStyle {
  text-decoration: none;
}

.floor {
  height: 15vh;
  border: 1px solid white;
  line-height: 150%;
}

.authorBox {
  background-color: lightBlue;
  width: 22%;
  border-right: 1px solid white;
  box-shadow: inset 0 0 30px #FFFFFF;
}

.contentBox {
  background-color: Cornsilk;
  vertical-align: top;
  white-space: pre-line;
}

.contentBox h1 {
  font-weight: bold;
  font-size: 3vh;
}

.contentBox p {
  text-align: left;
  padding: 2%;
  font-size: 2.5vh;
}

.gameHeadIcon {
  max-height: 100px;
}

.toolBTN {
  display: inline-block;
}

footer {
  color: white;
  width: 100%;
  height: cover;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 1%;
}

.panel-footer{
  text-align: justify;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.breadcrumb {
  text-align: left;
  margin: 0;
  border-radius: 0;
}

.topicsContainer a {
  text-decoration: none;
}

.profileContainer {
  height: cover;
  width: 100%;
}

.profileHeader {
  background-color: rgba(200, 200, 200, 0.7);
  height: 20vh;
  text-align: left;
  padding: 5%;
}

.profileBody {
  background-color: rgba(255, 255, 255, 0.7);
  min-height: 80vh;
  height: cover;
  padding: 5%;
  text-align: left;
}

.profileIcon{
  display: inline-block;
  background-color: white;
  border: 2px double grey;
  height: 30vh;
  width: 15vw;
}

.profileName {
  display: inline-block;
  vertical-align: top;
  margin-left: 3%;
  font-size: 5vh;
}

.profileName span {
  font-size: 5vh;
  color: SlateGray;
}

.profileInfo {
  margin: 0 auto;
  width: 25vw;
  height: cover;
  line-height: 200%;
  font-size: 2.5vh;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.profileInfo a {
  text-decoration: none;
}

.commentLine {
  vertical-align: text-top;
}

.vtop {
  vertical-align: top;
}

.messageShow {
  display: inline-block;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  min-width: 50%;
  max-width: 80%;
  cursor: pointer;
}

.modal-body p{
  white-space: pre-line;
  word-break: break-all;
}
